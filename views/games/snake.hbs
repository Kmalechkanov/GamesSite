{{>header}}
<div style="text-align:center; padding-top:10%">
    <svg width="301" height="301" version="1.1">
        <defs>
            <pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse">
                <rect width="10" height="10" fill="none" />
                <path d="M 100 0 L 0 0 0 100" fill="none" stroke="gray" stroke-width="1" />
            </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#grid)" />
        <rect x="0" y="0" width="301" height="301" stroke="black" fill="none" stroke-width="1" />
        
        <rect class="player" id="player" x="10" y="10" width="10" height="10" stroke="black" fill="full" stroke-width="0" />
    </svg>
    <h1>Use arrow keys to take control!</h1>
    <script src="../../scripts/games/snake.js" onload="movementManager()"></script>
</div>
{{>footer}}